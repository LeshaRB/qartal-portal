<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:m='urn:import:gwt.material.design.client.ui'
  xmlns:ma='urn:import:gwt.material.design.addins.client'
>

  <ui:with field="lang" type="com.nomis.client.widget.logoption.LogOptionConstants"/>

  <ui:style gss="true">
    .panel {
      padding: 20px;
      margin: 20px;
      margin-top: 20px;
    }
  </ui:style>

  <m:MaterialPanel addStyleNames="{style.panel}">
    <m:MaterialColumn grid="s10">
      <ma:combobox.MaterialComboBox ui:field="logLevel" label="{lang.logLevel}"/>
    </m:MaterialColumn>
    <m:MaterialColumn grid="s2">
      <m:MaterialPanel textAlign="RIGHT">
        <m:MaterialButton text="{lang.aplay}" ui:field="btnAplay" marginRight="20"/>
        <m:MaterialButton text="{lang.show}" ui:field="btnShow"/>
      </m:MaterialPanel>
    </m:MaterialColumn>
  </m:MaterialPanel>
</ui:UiBinder>