<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:m='urn:import:gwt.material.design.client.ui'
  xmlns:ma='urn:import:gwt.material.design.addins.client'
>

  <ui:with field="lang" type="com.nomis.client.widget.loading.LoadingConstants"/>

  <ui:style gss="true">
    .panel {
      padding: 20px;
      margin: 20px;
      margin-top: 20px;
    }
  </ui:style>

  <m:MaterialPanel addStyleNames="{style.panel}">
    <ma:richeditor.MaterialRichEditor ui:field="logInfo" airMode="true" height="calc(100vh - 300px)" overflow="AUTO"
      enabled="false"/>
  </m:MaterialPanel>

</ui:UiBinder>