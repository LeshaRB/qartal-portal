<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:m='urn:import:gwt.material.design.client.ui'
>

  <ui:with field="lang" type="com.nomis.client.widget.serverstatus.ServerStatusConstants"/>

  <ui:style gss="true">
    .serverIcon {
      width: 48px !important;
      height: 48px !important;
    }

    .serverIconWrapper {
      height: 85px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  </ui:style>

  <m:MaterialCard backgroundColor="WHITE" orientation="LANDSCAPE">
    <m:MaterialCardImage waves="LIGHT" addStyleNames="{style.serverIconWrapper}">
      <m:MaterialImage ui:field="serverIcon" addStyleNames="{style.serverIcon}"/>
    </m:MaterialCardImage>
    <m:MaterialCardContent textColor="BLACK" padding="10">
      <m:MaterialCardTitle iconPosition="RIGHT" ui:field="serverName"/>
      <m:MaterialLabel ui:field="serverStatus"/>
    </m:MaterialCardContent>
    <m:MaterialCardAction>
      <m:MaterialLink text="{lang.showInfo}" textColor="BLUE" iconType="POLYMER" ui:field="showInfo"/>
    </m:MaterialCardAction>
  </m:MaterialCard>
</ui:UiBinder>