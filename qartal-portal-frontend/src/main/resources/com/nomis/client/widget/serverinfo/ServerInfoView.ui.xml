<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:m='urn:import:gwt.material.design.client.ui'
  xmlns:m.table='urn:import:gwt.material.design.client.ui.table'
>

  <ui:with field="lang" type="com.nomis.client.widget.serverinfo.ServerInfoConstants"/>

  <ui:style gss="true">
    .panel {
      padding: 20px;
      margin: 20px;
      margin-top: 20px;
    }
  </ui:style>

  <m:MaterialPanel addStyleNames="{style.panel}">
    <m.table:MaterialDataTable ui:field="serverInfo" height="calc(100vh - 300px)" useCategories="false"
      useRowExpansion="false" selectionType="SINGLE"/>
  </m:MaterialPanel>
</ui:UiBinder>