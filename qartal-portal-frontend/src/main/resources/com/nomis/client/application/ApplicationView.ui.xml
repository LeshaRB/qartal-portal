<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:m='urn:import:gwt.material.design.client.ui'>

  <ui:with field="lang" type="com.nomis.client.application.ApplicationConstants"/>

  <m:MaterialPanel>
    <m:MaterialPanel ui:field="loadingContent"/>
    <m:MaterialHeader>
      <m:MaterialNavBar layoutPosition="FIXED" ui:field="navBar" activates="sidenavNavShrink" shadow="1">
        <m:MaterialNavBrand fontSize="2.2em" paddingLeft="60" text="{lang.caption}"/>
        <m:MaterialNavSection float="RIGHT">
          <m:MaterialLink iconType="EXIT_TO_APP" ui:field="logout"/>
        </m:MaterialNavSection>
      </m:MaterialNavBar>
    </m:MaterialHeader>

    <m:MaterialSideNavDrawer m:id="sidenavNavShrink" ui:field="sideNav" width="300">
      <m:MaterialNavBrand text="gwt-material"/>
      <m:MaterialLink iconType="INBOX" text="Inbox">
        <m:MaterialBadge text="1 new"/>
      </m:MaterialLink>
      <m:MaterialLink iconType="SEND" text="Send Mail"/>
      <m:MaterialLink iconType="DRAFTS" text="Drafts"/>
      <m:MaterialLink iconType="MAIL" text="All Mail"/>
      <m:MaterialLink iconType="DELETE" text="Trash"/>
      <m:MaterialLink iconType="INFO_OUTLINE" text="Spam"/>
    </m:MaterialSideNavDrawer>

    <m:MaterialContainer ui:field="mainContent"/>
  </m:MaterialPanel>
</ui:UiBinder>