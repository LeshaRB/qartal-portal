<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:m='urn:import:gwt.material.design.client.ui'>

  <ui:with field="lang" type="com.nomis.client.application.home.HomeConstants"/>

  <m:MaterialPanel>
    <m:MaterialRow>
      <m:MaterialColumn width="300">
        <m:MaterialCollection header="{lang.serverHeaderText}" width="100%" ui:field="serverCollection"/>
        <m:MaterialCollection header="{lang.clusterHeaderText}" width="100%" ui:field="clusterCollection"/>
      </m:MaterialColumn>
      <m:MaterialColumn>
        <m:MaterialRow height="400">
          <m:MaterialColumn grid="s8" shadow="1" ui:field="serverInfo"/>
          <m:MaterialColumn grid="s4" shadow="1" ui:field="logOption"/>
        </m:MaterialRow>
        <m:MaterialRow>
          <m:MaterialColumn grid="s12" shadow="1" ui:field="logInfo"/>
        </m:MaterialRow>
      </m:MaterialColumn>
    </m:MaterialRow>
  </m:MaterialPanel>
</ui:UiBinder>