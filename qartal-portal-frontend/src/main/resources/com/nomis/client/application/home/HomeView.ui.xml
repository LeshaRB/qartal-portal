<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:m='urn:import:gwt.material.design.client.ui'>

  <ui:with field="lang" type="com.nomis.client.application.home.HomeConstants"/>

  <ui:style gss="true">
    .serverCollectionWrapper {
      display: flex;
      justify-content: center;
    }
  </ui:style>

  <m:MaterialPanel>
    <m:MaterialRow addStyleNames="valign-wrapper">
      <m:MaterialColumn grid="s9 m9 l9">
        <m:MaterialRow addStyleNames="valign-wrapper" ui:field="serverCollection"/>
      </m:MaterialColumn>
      <m:MaterialColumn grid="s3 m3 l3">
        <m:MaterialRow ui:field="clusterCollection"/>
      </m:MaterialColumn>
    </m:MaterialRow>

    <m:MaterialRow>
      <m:MaterialColumn grid="s12 m12 l12">
        <m:MaterialRow>
          <m:MaterialColumn grid="s12">
            <m:MaterialTab ui:field="tab" indicatorColor="YELLOW" shadow="1">
              <m:MaterialTabItem waves="YELLOW" grid="s6">
                <m:MaterialLink text="{lang.serverInfo}" href="#tab1" textColor="WHITE"/>
              </m:MaterialTabItem>
              <m:MaterialTabItem waves="YELLOW" grid="s6">
                <m:MaterialLink text="{lang.serverLog}" href="#tab2" textColor="WHITE"/>
              </m:MaterialTabItem>
            </m:MaterialTab>
          </m:MaterialColumn>

          <m:MaterialColumn m:id="tab1" grid="s12">
            <m:MaterialRow shadow="1" ui:field="serverInfo"/>
          </m:MaterialColumn>
          <m:MaterialColumn m:id="tab2" grid="s12">
            <m:MaterialRow shadow="1" ui:field="logOption"/>
            <m:MaterialRow shadow="1" ui:field="logInfo"/>
          </m:MaterialColumn>
        </m:MaterialRow>
      </m:MaterialColumn>
    </m:MaterialRow>
  </m:MaterialPanel>
</ui:UiBinder>